<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".fragment.AllNftFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/purple_700">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:padding="7dp"
            android:src="@drawable/homelogo">

        </ImageView>

        <ImageView
            android:id="@+id/ivNotification"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:padding="4dp"
            android:src="@drawable/notification">

        </ImageView>

        <ImageView
            android:id="@+id/ivSearch"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/ivNotification"
            android:padding="4dp"
            android:src="@drawable/search"
            app:tint="@color/white">

        </ImageView>

        <ImageView
            android:id="@+id/ivchat"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/ivSearch"
            android:padding="4dp"
            android:src="@drawable/chat"
            app:tint="@color/white">

        </ImageView>
    </RelativeLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txName1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/opensansbold"
                    android:text="NFT"
                    android:textColor="@color/purple_200"
                    android:textSize="20sp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txPosition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_toEndOf="@+id/txName1"
                    android:fontFamily="@font/opensansbold"
                    android:text="Market"
                    android:textColor="@color/text"
                    android:textSize="20sp" />


            </RelativeLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="145dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="15dp">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cd1"
                            android:layout_width="120dp"
                            android:layout_height="150dp"
                            android:layout_above="@+id/rlCard"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="-120dp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="3dp">


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:scaleType="fitXY"
                                android:src="@drawable/market">

                            </ImageView>

                        </com.google.android.material.card.MaterialCardView>

                        <RelativeLayout
                            android:id="@+id/rlCard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="120dp"
                                android:layout_height="150dp"
                                android:layout_marginBottom="2dp"
                                app:cardBackgroundColor="@color/trans"
                                app:cardCornerRadius="15dp"
                                app:cardElevation="3dp">

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="2dp"
                                    android:layout_marginTop="120dp"
                                    android:fontFamily="@font/opensansbold"
                                    android:text="Art"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />


                            </com.google.android.material.card.MaterialCardView>


                        </RelativeLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="145dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="15dp">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cd11"
                            android:layout_width="120dp"
                            android:layout_height="150dp"
                            android:layout_above="@+id/rlCard1"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="-120dp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="3dp">


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:scaleType="fitXY"
                                android:src="@drawable/dy2">

                            </ImageView>

                        </com.google.android.material.card.MaterialCardView>

                        <RelativeLayout
                            android:id="@+id/rlCard1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="120dp"
                                android:layout_height="150dp"
                                android:layout_marginBottom="2dp"
                                app:cardBackgroundColor="@color/trans"
                                app:cardCornerRadius="15dp"
                                app:cardElevation="3dp">

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="2dp"
                                    android:layout_marginTop="120dp"
                                    android:fontFamily="@font/opensansbold"
                                    android:text="Games"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />


                            </com.google.android.material.card.MaterialCardView>


                        </RelativeLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="145dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="15dp">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cd12"
                            android:layout_width="120dp"
                            android:layout_height="150dp"
                            android:layout_above="@+id/rlCard2"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="-120dp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="3dp">


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:scaleType="fitXY"
                                android:src="@drawable/dy3">

                            </ImageView>

                        </com.google.android.material.card.MaterialCardView>

                        <RelativeLayout
                            android:id="@+id/rlCard2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="120dp"
                                android:layout_height="150dp"
                                android:layout_marginBottom="2dp"
                                app:cardBackgroundColor="@color/trans"
                                app:cardCornerRadius="15dp"
                                app:cardElevation="3dp">

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="2dp"
                                    android:layout_marginTop="120dp"
                                    android:fontFamily="@font/opensansbold"
                                    android:text="Music"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />


                            </com.google.android.material.card.MaterialCardView>


                        </RelativeLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="145dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="10dp">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cd13"
                            android:layout_width="120dp"
                            android:layout_height="150dp"
                            android:layout_above="@+id/rlCard3"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="-120dp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="3dp">


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:scaleType="fitXY"
                                android:src="@drawable/dy4">

                            </ImageView>

                        </com.google.android.material.card.MaterialCardView>

                        <RelativeLayout
                            android:id="@+id/rlCard3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="120dp"
                                android:layout_height="150dp"
                                android:layout_marginBottom="2dp"
                                app:cardBackgroundColor="@color/trans"
                                app:cardCornerRadius="15dp"
                                app:cardElevation="3dp">

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="2dp"
                                    android:layout_marginTop="120dp"
                                    android:fontFamily="@font/opensansbold"
                                    android:text="Photography"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />


                            </com.google.android.material.card.MaterialCardView>


                        </RelativeLayout>

                    </RelativeLayout>
                </LinearLayout>


            </HorizontalScrollView>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="15dp"
                android:background="@color/view" />

            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txFeatured"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:fontFamily="@font/opensansbold"
                    android:text="Featured"
                    android:textColor="@color/text"
                    android:textSize="20sp" />


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/txFeatured"
                    android:fontFamily="@font/opensansbold"
                    android:text="NFTs"
                    android:textColor="@color/purple_200"
                    android:textSize="20sp" />

                <pl.droidsonroids.gif.GifImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:background="#fff"
                    android:src="@drawable/nft" />


            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rel"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvAllNft"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </androidx.recyclerview.widget.RecyclerView>
            </RelativeLayout>
        </LinearLayout>


    </ScrollView>


</LinearLayout>