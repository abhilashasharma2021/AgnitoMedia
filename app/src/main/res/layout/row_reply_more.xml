<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivAddRply"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/profi">

        </de.hdodenhof.circleimageview.CircleImageView>


        <EditText
            android:id="@+id/etMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/ivAddRply"
            android:backgroundTint="@color/grey_text"
            android:fontFamily="@font/opensansregular"
            android:hint="@string/add_a_reply"
            android:inputType="textShortMessage"
            android:maxLength="100"
            android:maxLines="5"
            android:textColor="@color/black"
            android:textColorHint="@color/grey_text"
            android:textSize="13sp">


        </EditText>

        <RelativeLayout
            android:id="@+id/rlNew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ivAddRply"
            android:layout_below="@+id/etMsg">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivComment"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/profi">

            </de.hdodenhof.circleimageview.CircleImageView>


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txCommentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"

                android:layout_toEndOf="@+id/ivComment"
                android:fontFamily="@font/opensansbold"
                android:text="Anil Yadav"
                android:textColor="@color/black"
                android:textSize="14sp" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txCommentday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/opensansregular"
                android:text="2 Days Ago"
                android:textColor="@color/text"
                android:textSize="14sp" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txCommentmsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txCommentName"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/ivComment"
                android:fontFamily="@font/opensansregular"
                android:text="This picture made my day"
                android:textColor="@color/text"
                android:textSize="14sp" />


        </RelativeLayout>


    </RelativeLayout>
</RelativeLayout>