<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/llNft"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/rlNew"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/ivNft"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="fitXY"
                android:src="@drawable/virat">

            </ImageView>


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txNftName"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivNft"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/opensansbold"
                android:text="Virat Kholi Stardust \nDreamer By"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txNftName"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/opensansmedium"
                android:text="ACR0722"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txPrize1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivNft"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/opensansbold"
                android:text="@string/prize"
                android:textColor="@color/black"
                android:textSize="15sp" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txPrize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txPrize1"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/opensansbold"
                android:text="â‚¹ 7.954L"
                android:textColor="@color/purple_200"
                android:textSize="15sp" />


            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txPrize"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_toStartOf="@+id/txLastSale"
                android:fontFamily="@font/opensansregular"
                android:text="Last Sale :"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txLastSale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txPrize"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/opensansregular"
                android:text="6.954L"
                android:textColor="@color/purple_200"
                android:textSize="15sp" />

            <RelativeLayout
                android:id="@+id/rlBuyNow"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:background="@color/purple_200">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/opensansbold"
                    android:text="@string/buy_now"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </RelativeLayout>

        </RelativeLayout>






    </com.google.android.material.card.MaterialCardView>

</LinearLayout>