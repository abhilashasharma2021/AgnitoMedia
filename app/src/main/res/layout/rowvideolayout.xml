<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/real">

        </ImageView>


        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/blacktrans">

            <ImageView
                android:id="@+id/ivView"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:padding="7dp"
                android:src="@drawable/view">

            </ImageView>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txNotification1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/ivView"
                android:fontFamily="@font/opensansregular"
                android:text="100K"
                android:textColor="@color/white"
                android:textSize="13sp" />

        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_above="@+id/rlDis"
        android:layout_marginStart="15dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_11"
            android:layout_width="50dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/circle_white"
            android:layout_height="50dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivProfile"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_centerInParent="true"
                android:src="@drawable/profi">

            </de.hdodenhof.circleimageview.CircleImageView>

        </RelativeLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/rl_11"
            android:fontFamily="@font/opensansbold"
            android:text="Satyam Mishra"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txName"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:layout_toStartOf="@+id/ivBookMark"
            android:layout_toEndOf="@+id/rl_11"
            android:fontFamily="@font/opensansregular"
            android:textColor="@color/white"
            android:textSize="11sp" />

        <ImageView
            android:id="@+id/ivBookMark"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:padding="8dp"
            android:src="@drawable/bookmark"
            app:tint="@color/white" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlDis"
        android:layout_width="wrap_content"
        android:layout_above="@+id/llBottom"
        android:layout_marginBottom="10dp"
        android:layout_height="20dp">

        <ImageView
            android:id="@+id/ivMusic"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:padding="4dp"
            android:src="@drawable/music">

        </ImageView>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/ivMusic"
            android:fontFamily="@font/opensansregular"
            android:gravity="center_vertical"
            android:text="Tanishq Singh aka Paradox | Hustle 2.0"
            android:textColor="@color/white"
            android:textSize="11sp" />

    </RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

</RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/white"
        android:id="@+id/view"
        android:layout_alignParentBottom="true"
        android:layout_height="2dp">

    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_above="@+id/view"
        android:weightSum="3"
        android:id="@+id/llBottom"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="110dp"
            android:layout_marginBottom="25dp"
            android:layout_height="46dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/blacktrans">

            <ImageView
                android:id="@+id/ivLike"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:padding="4dp"
                android:src="@drawable/like1">

            </ImageView>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txLike"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/ivLike"
                android:fontFamily="@font/opensansregular"
                android:gravity="center_vertical"
                android:text="10.5K"
                android:textColor="@color/white"
                android:textSize="13sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="110dp"
            android:layout_marginBottom="25dp"
            android:layout_height="46dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/blacktrans">

            <ImageView
                android:id="@+id/ivComm"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:padding="4dp"
                android:src="@drawable/comments1">

            </ImageView>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txComment"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/ivComm"
                android:fontFamily="@font/opensansregular"
                android:gravity="center_vertical"
                android:text="400"
                android:textColor="@color/white"
                android:textSize="13sp" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="110dp"
            android:layout_marginBottom="25dp"
            android:layout_height="46dp"
            android:layout_weight="1"
            android:layout_marginEnd="15dp"
            android:gravity="center"
            android:layout_marginStart="15dp"
            android:background="@drawable/blacktrans">

            <ImageView
                android:id="@+id/ivShare"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:padding="4dp"
                android:src="@drawable/share1">

            </ImageView>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txShare"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/ivShare"
                android:fontFamily="@font/opensansregular"
                android:gravity="center_vertical"
                android:text="120"
                android:textColor="@color/white"
                android:textSize="13sp" />

        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>