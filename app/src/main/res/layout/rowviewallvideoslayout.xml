<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:id="@+id/cdVideo"
        android:layout_margin="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="1dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="15dp"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </RelativeLayout>
        <ImageView
            android:id="@+id/ivVideo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleX="1.3"
            android:src="@drawable/dummy3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <RelativeLayout
                android:layout_width="80dp"
                android:background="@drawable/blacktrans"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_height="30dp">

                <ImageView
                    android:id="@+id/ivView"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/view">

                </ImageView>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txNotification1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@+id/ivView"
                    android:fontFamily="@font/opensansregular"
                    android:text="100K"
                    android:textColor="@color/white"
                    android:textSize="11sp" />


            </RelativeLayout>

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cdVideo"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/opensansregular"
        android:maxLines="2"
        android:text="Videos Title here, dance with me."
        android:textColor="@color/black"
        android:textSize="14sp" />

</RelativeLayout>